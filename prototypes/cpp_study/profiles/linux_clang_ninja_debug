[settings]
arch=x86_64
build_type=Debug
compiler=clang
compiler.version=18
compiler.cstd=23
compiler.cppstd=23
compiler.libcxx=libc++
os=Linux


[conf]
tools.cmake.cmaketoolchain:generator=Ninja
tools.build:compiler_executables={"c": "/usr/bin/clang", "cpp": "/usr/bin/clang++"}

[buildenv]
CC=(path)/usr/bin/clang
CXX=(path)/usr/bin/clang++
